<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/delete_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_dialog_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="删除操作"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/delete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_line"
        android:layout_below="@+id/delete_title"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="18sp" />

    <View
        android:id="@+id/delete_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/delete_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/delete_cancel"
        android:layout_alignRight="@+id/delete_cancel"
        android:background="@color/cut_offrule" />

    <TextView
        android:id="@+id/delete_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete_anchor"
        android:layout_toLeftOf="@+id/delete_anchor"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消" />

    <TextView
        android:id="@+id/delete_determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/delete_anchor"
        android:layout_alignTop="@+id/delete_line"
        android:layout_toRightOf="@+id/delete_anchor"
        android:background="@drawable/btn_dialog_delete"
        android:gravity="center"
        android:padding="10dp"
        android:text="确认"
        android:textColor="@color/white" />
</RelativeLayout>